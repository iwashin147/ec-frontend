{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev"
    },
    {
      "name": "Next.js: Client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Full-stack Debug (MSW)",
      "configurations": ["Next.js: Server-side", "Next.js: Client-side"]
    }
  ]
}
